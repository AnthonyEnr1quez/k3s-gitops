{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
    ':configMigration',
    ':disableRateLimiting',
    ':semanticCommits',
    ':timezone(America/Chicago)',
    'github>AnthonyEnr1quez/k3s-gitops//.github/renovate/autoMerge.json5',
    'github>AnthonyEnr1quez/k3s-gitops//.github/renovate/commitMessage.json5',
    'github>AnthonyEnr1quez/k3s-gitops//.github/renovate/groups.json5',
    'github>AnthonyEnr1quez/k3s-gitops//.github/renovate/semanticCommits.json5',
  ],
  commitBodyTable: true,
  ignorePaths: [
    '**/*.sops.*',
  ],
  flux: {
    managerFilePatterns: [
      '/(^|/)kubernetes/.+\\.ya?ml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/(^|/)kubernetes/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)kubernetes/.+\\.ya?ml$/',
    ],
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'at any time',
    ],
  },
  nix: {
    enabled: true,
  },
}
