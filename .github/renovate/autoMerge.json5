{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  lockFileMaintenance: {
    automerge: true,
    automergeType: "branch",
  },
  packageRules: [
    {
      description: "Auto-merge GitHub Actions",
      matchDatasources: ["github-tags"],
      matchManagers: ["github-actions"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch"],
      minimumReleaseAge: "3 days",
      ignoreTests: true,
    },
    {
      description: "Auto-merge trusted container images",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["digest", "minor", "patch"],
      ignoreTests: true,
      matchPackageNames: [
        "ghcr.io/home-operations/bazarr",
        "lscr.io/linuxserver/calibre",
        "ghcr.io/qdm12/gluetun",
        "ghcr.io/mealie-recipes/mealie",
        "ghcr.io/home-operations/plex",
        "ghcr.io/home-operations/prowlarr",
        "ghcr.io/home-operations/qbittorrent",
        "ghcr.io/home-operations/radarr",
        "public.ecr.aws/docker/library/redis",
        "docker.io/thomst08/requestrr",
        "ghcr.io/home-operations/sonarr",
        ],
    },
  ],
}