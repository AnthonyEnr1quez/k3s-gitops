{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      groupName: "kairos-opensuse-leap",
      matchPackagePatterns: ["kairos"],
      matchDatasources: ["docker"],
      separateMinorPatch: false
    },
    {
      groupName: "cert-manager",
      matchPackagePatterns: ["cert-manager"],
      matchDatasources: ["docker", "helm"],
      separateMinorPatch: false
    },
    {
      groupName: "sops-secrets-operator",
      matchPackagePatterns: ["sops-secrets-operator"],
      matchDatasources: ["docker", "helm"],
      separateMinorPatch: false
    },
    {
      groupName: "flux",
      matchPackagePatterns: ["fluxcd"],
      matchDatasources: ["docker", "github-tags"],
      separateMinorPatch: false
    },
    {
      groupName: "envoy-gateway",
      matchPackagePatterns: ["envoy"],
      matchDatasources: ["docker", "github-tags"],
      separateMinorPatch: false
    },
    {
      groupName: "home-assistant",
      matchPackagePatterns: ["home-assistant"],
      matchDatasources: ["docker", "github-tags"],
      separateMinorPatch: false
    },
    {
      groupName: "democratic-csi",
      matchPackagePatterns: [
        "democratic-csi",
        "democraticcsi/csi-grpc-proxy",
        "sig-storage/csi-node-driver-registrar",
        "sig-storage/csi-provisioner",
        "sig-storage/csi-snapshotter"
      ],
      matchDatasources: ["docker", "github-tags"],
      separateMinorPatch: false
    },
    {
      groupName: "bar-assistant",
      matchPackagePatterns: [
        "barassistant",
        "meilisearch",
        "salt-rim"
      ],
      matchDatasources: ["docker", "github-tags"],
      separateMinorPatch: false
    },
    {
      groupName: "metallb",
      matchPackagePatterns: [
        "metallb",
        "frrouting/frr"
      ],
      matchDatasources: ["docker", "github-tags"],
      separateMinorPatch: false
    },
    {
      groupName: "metrics-server",
      matchPackagePatterns: [
        "metrics-server",
      ],
      matchDatasources: ["docker", "github-tags"],
      separateMinorPatch: false
    },
  ]
}
